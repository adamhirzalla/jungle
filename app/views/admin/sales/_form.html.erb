<%= form_for [:admin, @sale] do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :starts_on %>
    <%= form.date_field :starts_on, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :ends_on %>
    <%= form.date_field :ends_on, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :percent_off %>
    <%= form.number_field :percent_off, class: 'form-control' %>
  </div>

  <p class="text-center">
    <%= form.submit 'Create Sale', class: 'btn btn-primary' %>
  </p>
<% end %>