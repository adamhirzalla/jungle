<ul class="list-group">
  <% @products.each do |product| %>
    <li class="list-group-item"><%= link_to product.name, product %>
    <%= link_to fa_icon('trash'), [:admin, product], class: "badge",
                method: :delete,
                data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>