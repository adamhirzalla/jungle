<div class="user-form">
<%= form_for :login do |form| %>

  <h2 class="text-center">Log In</h2>
  <div class="form-group">
    <%= form.email_field :email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>
  <div class ="text-center form-group">
    <%= form.submit 'Login', class: "btn btn-primary" %>
  </div>  
  <div class="text-center">Don't have an account? <%= link_to 'Sign up!', '/signup', class: "link" %>
  </div>
<% end %>
</div>
