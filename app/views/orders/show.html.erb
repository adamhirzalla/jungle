<section class="orders-show">

  <header class="order-summary">
    <h2 class="lead">✔️  Thank you, your order has been placed!</h1>
    <h4>An email confirmation has been sent to: <b><%= @order.email %></b>.</h4>
    <h4><b>Order Number: <%= @order.id %></b></h4>
  </header>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |item| %>
          <%= render 'line_item', product: item.product, quantity: item[:quantity].to_i %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            TOTAL CHARGED:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  <p class="text-center">
    <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
  </p>

</section>
