<% flash.each do |type, msg| %>
<div class="alert alert-<%=type%>">
  <% if msg.is_a? Array %>
    <ul>
      <% msg.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  <% else %>
    <%= msg %>
  <% end %>
</div>
<% end %>

<% if active_sale? %>
<div class="alert alert-success">
There's an active <strong><%= sale.name %></strong> sale going on!
<strong>Everything is <%= sale.percent_off %>% off!</strong> 
</div>
<% end %>